# MikroTik MCP Environment Variables
# Copy this file to .env and update with your actual values
# Never commit .env to version control!

# Router Connection
MIKROTIK_HOST=192.168.88.1
MIKROTIK_USERNAME=admin
MIKROTIK_PASSWORD=your-password-here
MIKROTIK_PORT=22

# SSH Key Authentication (recommended)
# MIKROTIK_SSH_KEY=/path/to/your/private/key
# MIKROTIK_STRICT_HOST_KEY_CHECKING=true
# MIKROTIK_KNOWN_HOSTS=/path/to/known_hosts

# Safety Settings
MIKROTIK_CONNECT_TIMEOUT=10
MIKROTIK_CMD_TIMEOUT=30

# Logging (optional)
# LOG_LEVEL=INFO
# LOG_FILE=logs/mikrotik-mcp.log

