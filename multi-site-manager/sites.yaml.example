# Global Settings
global:
  # Default backup location
  backup_directory: "./backups"
  
  # Default monitoring settings
  monitoring:
    default_interval: 300
    alert_email: "admin@example.com"
    alert_methods:
      - "email"
      # - "slack"
      # - "sms"
  
  # Connection settings
  connection:
    timeout: 10  # seconds
    retry_attempts: 3
    retry_delay: 5  # seconds between retries
  
  # Logging
  logging:
    level: "INFO"  # DEBUG, INFO, WARNING, ERROR
    file: "./logs/multi-site-manager.log"
    max_size_mb: 100
    backup_count: 5
  
  # Security
  security:
    require_confirmation: true  # Confirm destructive operations
    log_all_operations: true
    encrypt_backups: false  # Encrypt backup files
    # encryption_key: "path/to/encryption/key"

# Site Groups (for bulk operations)
groups:
  production:
    - home-main
    - vacation-home
  
  testing:
    - lab-network
  
  all-sites:
    - home-main
    - vacation-home
    - lab-network
  
  high-priority:
    - home-main
    # - office-main

